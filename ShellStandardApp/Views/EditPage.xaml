<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Edit Page"
             x:Class="ShellStandardApp.Views.EditPage">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Edit Page" FontSize="44"/>
        <Entry Text="{Binding Person.Name}" FontSize="20" TextColor="Red" WidthRequest="200" Margin="0,100,0,0" HorizontalOptions="CenterAndExpand" />
        <Button Text="Save Name" Command="{Binding SaveNameCommand}" Margin="0,30,0,0" />
    </StackLayout>
</ContentPage>
